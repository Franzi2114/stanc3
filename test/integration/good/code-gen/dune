;;   (action (run git clone --recursive https://github.com/stan-dev/cmdstan)))

(rule
  (targets eight_schools_ncp)
  (deps eight_schools_ncp.cpp)
  (action (chdir /Users/xitrium/scm/clean/cmdstan (run make %{targets}))))

(alias (name runtest)
  (deps eight_schools_ncp)
  (action (run %{deps})))
